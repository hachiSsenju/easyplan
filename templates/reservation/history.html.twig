{% extends 'base.html.twig' %}

{% block title %}Historique des réservations{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h1>Historique des réservations</h1>

<table class='table table-hover'>
    <thead>
        <tr>
           
            <th>Utilisateur</th>
            <th>Salle</th>
            <th>Date</th>
            <th>Heure de début</th>
            <th>Heure de fin</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
    {% for history in histories %}
        {% for reservation in history.reservation %}
            <tr>
               
                <td>{{ reservation.user }}</td>
                <td>{{ reservation.salle }}</td>
                <td>{{ reservation.date }}</td>
                <td>{{ reservation.heureD }}</td>
                <td>{{ reservation.heureF }}</td>
               <td style="{% if reservation.status == 'Ajoutée' %}color: green
            {% elseif reservation.status == 'Supprimée' %}color: red
            {% elseif reservation.status == 'Mise a jour' %}color: blue
            {% endif %}">
    {{ reservation.status }}
</td>
      </tr>
        {% endfor %}
    {% else %}
        <tr><td colspan="6">Aucune réservation trouvée.</td></tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
